{
  "settings": {
    "analysis": {
      "filter": {
        /*
        This token filter extracts strings of numbers (i.e. the ID) out of URLs
        */
        "get_id": {
          "type": "pattern_capture",
          "preserve_original": 1,
          "patterns": ["/([0-9]{9})/"]
        }
      },
      "analyzer": {
        "extr_id": {
          "type": "custom",
          "tokenizer": "keyword",
          // Keeps the string as is
          "filter": "get_id"
        },
        "text_folded": {
          "type": "custom",
          "tokenizer": "whitespace",
          "filter": ["asciifolding"]
        }
      }
    }
  },
