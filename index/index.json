{
  "settings": {
    "analysis": {
      "filter": {
        "autocomplete_filter": {
          "type": "edge_ngram",
          "min_gram": 1,
          "max_gram": 8
        }
      },
      "analyzer": {
        "text_folded": {
          // Converts Unicode characters outside the ASCII range into their ASCII equivalent, if one exists.
          "type": "custom",
          "tokenizer": "whitespace",
          "filter": [
            "asciifolding"
          ]
        },
        "autocomplete": {
          // Provides an EdgeNGram-filter to enable an autocomplete option for querying.
          "type": "custom",
          "tokenizer": "keyword",
          "filter": [
            "lowercase",
            "autocomplete_filter"
          ]
        }
      }
    }
  },
